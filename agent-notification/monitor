#!/usr/bin/env python3
"""
üîÑ COMANDO SIMPLIFICADO PARA MONITOR INFINITO

Uso:
    monitor          # Ativa monitoramento infinito
    monitor stop     # Para o monitoramento
    monitor status   # Verifica status
"""

import sys
import os
from pathlib import Path

# Diret√≥rio base
BASE_DIR = Path("/home/suthub/.claude/claude-cto")
MONITOR_SCRIPT = BASE_DIR / "monitor_infinito.py"

def main():
    """Comando simplificado para controlar monitor"""
    
    if len(sys.argv) > 1:
        comando = sys.argv[1].lower()
        
        if comando in ["stop", "parar", "s"]:
            print("üõë Parando monitor infinito...")
            os.system(f"python3 {MONITOR_SCRIPT} --stop")
        elif comando in ["status", "st"]:
            os.system(f"python3 {MONITOR_SCRIPT} --status")
        elif comando in ["help", "ajuda", "h", "--help", "-h"]:
            print(__doc__)
        else:
            print(f"‚ùå Comando desconhecido: {comando}")
            print("   Comandos: monitor [stop|status|help]")
    else:
        # Sem argumentos = ATIVAR monitor infinito
        print("üöÄ ATIVANDO MONITOR INFINITO ULTRATHINK")
        print("=" * 60)
        print("‚ö†Ô∏è  Este monitor NUNCA PARA automaticamente!")
        print("   Use Ctrl+C para parar")
        print("=" * 60)
        os.system(f"python3 {MONITOR_SCRIPT}")

if __name__ == "__main__":
    main()