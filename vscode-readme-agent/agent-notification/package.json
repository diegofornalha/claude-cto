{
  "name": "readme-agent-vsix",
  "displayName": "README Agent",
  "description": "Uma extens√£o de IDE que gera README para pastas usando IA",
  "version": "0.0.7",
  "publisher": "diegofornalha",
  "author": {
    "name": "Diego Fornalha",
    "email": "diegofornalha@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/diegofornalha/readme-agent.git"
  },
  "homepage": "https://github.com/diegofornalha/readme-agent",
  "license": "MIT",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "keywords": [
    "readme",
    "documentation",
    "markdown",
    "gemini",
    "ia",
    "ai",
    "portugues",
    "portuguese"
  ],
  "engines": {
    "vscode": "^1.83.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "README Agent",
      "properties": {
        "readmeAgent.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key do Claude (Anthropic)",
          "scope": "application"
        },
        "readmeAgent.preferredAI": {
          "type": "string",
          "enum": ["claude", "gemini", "ask"],
          "default": "ask",
          "description": "AI preferida para gerar READMEs",
          "enumDescriptions": [
            "Sempre usar Claude",
            "Sempre usar Gemini",
            "Perguntar sempre"
          ]
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "readmeagent.createFolderReadme",
          "when": "explorerResourceIsFolder",
          "group": "readme@1"
        },
        {
          "command": "readmeagent.createFolderReadmeClaude",
          "when": "explorerResourceIsFolder",
          "group": "readme@2"
        },
        {
          "command": "readmeagent.chooseAI",
          "when": "explorerResourceIsFolder",
          "group": "readme@3"
        }
      ]
    },
    "commands": [
      {
        "command": "readmeagent.createFolderReadme",
        "title": "README Agent: Gerar com Gemini",
        "icon": "$(file-text)"
      },
      {
        "command": "readmeagent.createFolderReadmeClaude",
        "title": "README Agent: Gerar com Claude",
        "icon": "$(robot)"
      },
      {
        "command": "readmeagent.chooseAI",
        "title": "README Agent: Escolher AI",
        "icon": "$(question)"
      },
      {
        "command": "readmeagent.configureClaude",
        "title": "README Agent: Configurar Claude API Key",
        "icon": "$(key)"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "dev": "npm-run-all -p dev:*",
    "dev:esbuild": "node esbuild.js --watch",
    "dev:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@google/generative-ai": "^0.10.0",
    "@anthropic-ai/sdk": "^0.24.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/vsce": "^2.26.1",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "istextorbinary": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
